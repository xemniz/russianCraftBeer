<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pubCard"
        android:layout_width="@dimen/view_pager_collapsed_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout

            android:id="@+id/pubLogoBackWhite"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/pubLogo"
            app:layout_constraintLeft_toLeftOf="@id/pubLogo"
            app:layout_constraintRight_toRightOf="@id/pubLogo"
            app:layout_constraintTop_toTopOf="@id/pubLogo"/>
        <ImageView
            android:id="@+id/pubLogoBack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/pubLogo"
            app:layout_constraintLeft_toLeftOf="@id/pubLogo"
            app:layout_constraintRight_toRightOf="@id/pubLogo"
            app:layout_constraintTop_toTopOf="@id/pubLogo"/>

        <ImageView
            android:padding="10dp"
            android:id="@+id/pubLogo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/logo_collapsed_height"
            android:scaleType="fitCenter"/>

        <ProgressBar
            android:id="@+id/pubLogoProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/pubLogo"
            app:layout_constraintLeft_toLeftOf="@id/pubLogo"
            app:layout_constraintRight_toRightOf="@id/pubLogo"
            app:layout_constraintTop_toTopOf="@id/pubLogo"/>


        <FrameLayout
            android:foreground="@color/colorPrimary"
            android:id="@+id/topPanelTextBack"
            android:layout_width="0dp"
            android:layout_height="@dimen/top_panel_height"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pubLogo"/>

        <ImageView
            android:id="@+id/pubSlideIcon"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
            app:layout_constraintBottom_toBottomOf="@id/topPanelTextBack"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/topPanelTextBack"/>

        <Space
            android:id="@+id/pubTitleSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias=".6"
            app:layout_constraintBottom_toBottomOf="@+id/topPanelTextBack"
            app:layout_constraintTop_toTopOf="@+id/topPanelTextBack"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/pubTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_weight="5"
            android:clickable="false"
            android:maxLines="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            app:autoSizeMaxTextSize="24sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity=".2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@id/pubTitleSpace"
            app:layout_constraintLeft_toLeftOf="@id/topPanelTextBack"
            app:layout_constraintRight_toLeftOf="@id/pubSlideIcon"
            app:layout_constraintTop_toTopOf="@id/topPanelTextBack"
            tools:text="Sample"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/pubType"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_weight="3"
            android:clickable="false"
            android:maxLines="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@id/topPanelTextBack"
            app:layout_constraintLeft_toLeftOf="@id/topPanelTextBack"
            app:layout_constraintRight_toLeftOf="@id/pubSlideIcon"
            app:layout_constraintTop_toBottomOf="@id/pubTitleSpace"
            tools:text="Sample"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pubContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/topPanelTextBack"/>

        <TextView
            android:id="@+id/pubDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
